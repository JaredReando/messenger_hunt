</p>

<%= link_to 'New message', new_user_message_path, class: "btn btn-secondary" %>

<%= form_tag("/checkin", method: "get") do %>
<%= text_field_tag(:message_msg_lat, '', value: session[:lat].to_f) %>
<%= text_field_tag(:message_msg_long, '', value: session[:long].to_f) %>
<%= submit_tag("Check In") %>
<% end %>

