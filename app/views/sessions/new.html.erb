<h1>Sign in</h1>

<div class="row">
  <div class="col-md-3">
    <%= form_tag signin_path do %>

    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, "", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, "", class: "form-control" %>
    </div>

    <%= submit_tag "Sign in", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
