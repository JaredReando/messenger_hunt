
<div class="row">
  <div class="col-md-12">

    <div class="" >

    <h1>Sign In</h1>
    <%= form_tag signin_path do %>

    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, "", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, "", class: "form-control" %>
    </div>

    <%= submit_tag "Continue", class: "btn btn-primary", id: "sign-in-btn" %>
    <% end %>
  </div>

  </div>
</div>
